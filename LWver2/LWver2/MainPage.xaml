<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LWver2.MainPage"
             BackgroundImageSource="BackDark.jpg">
        

    <StackLayout VerticalOptions="Fill" HorizontalOptions="Fill" >

        <!--first page-->
        <Image Source="Main250x250.png"  Margin="30,200,0,0" VerticalOptions="Center" HorizontalOptions="Start" />

        <Frame x:Name="firstLogoText" BackgroundColor="#805F9A" Padding="20" CornerRadius="10" Margin="20,-50,20, 0">
            <StackLayout x:Name="insideFirstLogo" Spacing="2" >
                <Label Text="Штобы покушац..." 
                       FontFamily="Bulito"
                       Margin="0,-10,0,-15" 
                       Padding="3" FontSize="Large"
                       FontAttributes="Bold"
                       TextColor="#2D2167"/>
                <Button x:Name="firstClick" 
                        Clicked="firstClick_Clicked"
                        FontFamily="Bulito"
                        CornerRadius="5"  
                        Text="Выбрать за меня"
                        Margin="0,20,0,0" 
                        TextColor="#2D2167" 
                        BackgroundColor="#D7A7C7"/>
            </StackLayout>
        </Frame>
    </StackLayout>

</ContentPage>
 